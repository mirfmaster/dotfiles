{
  "$schema": "https://opencode.ai/config.json",
  "username": "Iqbal",
  "instructions": [".cursor/rules/*.mdc"],
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "ask",
      "*.env.*": "ask",
      "*secrets*": "ask",
      "*credential*": "ask",
      "~/.ssh/*": "ask",
      "~/.gnupg/*": "ask"
    },
    "edit": {
      "/home/mirf/projects/**/*": "allow",
      "/home/mirf/spaces/**/*": "allow",
      "~/.config/**/*": "ask",
      "/etc/**/*": "deny",
      "/usr/**/*": "deny",
      "/var/**/*": "deny"
    },
    "bash": {
      "cat *": "allow",
      "ls *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "pwd": "allow",
      "git *": "allow",
      "npm *": "allow",
      "yarn *": "allow",
      "pnpm *": "allow",
      "bun *": "allow",
      "python *": "allow",
      "node *": "allow",
      "hyprctl reload*": "allow",
      "omarchy-restart-waybar*": "allow",
      "rm *": "ask",
      "mv *": "ask",
      "cp *": "ask",
      "pacman -R*": "ask",
      "sudo": "deny",
      "su": "deny"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "codesearch": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "question": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "task": "ask",
    "skill": {
      "Omarchy": "allow"
    },
    "external_directory": {
      "~/.local/share/*": "allow",
      "~/.claude/skills/omarchy/*": "allow",
      "/home/mirf/projects/**/*": "allow",
      "/home/mirf/spaces/**/*": "allow"
    }
  },
  "disabled_providers": [
    // "opencode",
    // "google",
    // "anthropic"
  ],
  "keybinds": {
    "messages_page_up": "ctrl+b",
    "messages_page_down": "ctrl+f",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+e",
    "theme_list": "none",
    "session_share": "none",

    "leader": "ctrl+x",
    "session_compact": "<leader>c",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "session_unshare": "none"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["pnpx", "-y", "@upstash/context7-mcp"],
      "enabled": false
    }
  }
}
