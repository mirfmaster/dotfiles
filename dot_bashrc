# Make an alias for invoking commands you use constantly
# alias p='python'
export PATH="$HOME/.config/composer/vendor/bin:/home/mirf/.moon/bin:~/.bun/bin:$PATH"

export terminal="kitty"
alias sv='sudo -E HOME=$HOME nvim'

# Source personal aliases
. ~/.labs/.bash/aliases.sh

. "$HOME/.atuin/bin/env"

[[ -f ~/.bash-preexec.sh ]] && source ~/.bash-preexec.sh
[[ -f ~/.labs/.bash/.bashfn.sh ]] && source ~/.labs/.bash/.bashfn.sh

eval "$(atuin init bash)"

